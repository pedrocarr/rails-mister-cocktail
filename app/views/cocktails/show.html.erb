<h1>This is the drink: <%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose|  %>
  <li>
    <%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'remove this dose', dose_path(dose), method: :delete %>
  </li>
</ul>

<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>